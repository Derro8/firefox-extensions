{
    "name": "Crunchyroll Profile",
    "description": "Allows you to have your own profile for a shared crunchyroll account.",
    "version": "0.0.2",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://www.crunchyroll.com/account/*"],
            "js": ["src/modules/storage.js", "src/name.js"]
        }
    ],
    "background": {
        "scripts": [
            "src/modules/storage.js",
            "src/profile.js",
            "src/history.js",
            "src/token.js",
            "src/watchlist.js"
        ],
        "persistent": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ayykkk@outlook.com",
            "strict_min_version": "57.0a1"
        }
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://www.crunchyroll.com/*"
    ]
}